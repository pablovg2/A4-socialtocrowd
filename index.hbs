<!doctype html>
<html>
<head>
	<meta charset="UTF-8" />
	<title>{{{meta_title}}}</title>
	<meta name="description" content="{{meta_description}}" />
	<meta name="HandheldFriendly" content="True" />
	<meta name="MobileOptimized" content="320" />
	<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1" />
	<link href="//fonts.googleapis.com/css?family=Roboto+Condensed:300italic,300" rel="stylesheet" type="text/css">
	<style>
		html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,img,ins,kbd,q,s,samp,small,strike,strong,sub,sup,tt,var,b,u,i,center,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td,article,aside,canvas,details,embed,figure,figcaption,footer,header,hgroup,menu,nav,output,ruby,section,summary,time,mark,audio,video {color:inherit;margin:0;padding:0;border:none;font:inherit;font-size:100%}
		body {background-color:rgb(239,239,239);color:rgb(136,136,136);font-family:'Roboto Condensed',sans-serif;font-size:18px;font-weight:300}
		.outer-wrapper {margin-left:33%}
		.inner-wrapper {margin:0 auto;max-width:640px;padding:40px 0 80px 0}
		a:hover {color:rgb(45,166,222)}
		h1,h2,h3 {font-size:24px}
		h1,p {margin-bottom:20px}
		em {font-style:italic}
		.blog-cover {background-color:rgb(83,83,83);height:100%;position:fixed;top:0;width:33%;z-index:2}
		.blog-cover figure {background-image: url({{@blog.cover}});background-origin:content-box;background-position:center;background-size:cover;box-shadow:inset -2px 0 16px rgba(0,0,0,.2);min-height:100%;width:100%}
		.blog-cover figcaption {bottom:20px;color:rgb(255,255,255);font-size:14px;position:absolute;right:20px}
		.index-header {font-size:24px;padding:40px 0}
		.blog {background-color:rgb(255,255,255);box-shadow:0 2px 16px rgba(0,0,0,.1);padding:40px}
		.blog-footer {font-size:14px;margin-top:40px;overflow:hidden;text-align:center}
		.blog-post {color:rgb(76,76,76);margin-bottom:40px}
		.post-header {margin-bottom:10px}
		.post-header a {text-decoration:none}
		.post-header h1, .post-header h2 {margin-bottom:0}
		.post-footer {color:rgb(136,136,136);font-size:14px;font-style:italic}
		.post-footer h4 {display:inline}
		.post-content p {margin-bottom:0}
		.author-icon {background-size:contain;border-radius:12px;display:inline-block;height:24px;margin:0 6px;position:relative;top:6px;width:24px}
		.pagination .home, nav.pagination .previous {float:left}
		.pagination .next {float:right}
		.pagination a {text-decoration:none}
		@media all and (max-width:954px) {
			.blog-cover {height:33%;width:100%;position:absolute}
			.outer-wrapper {margin-left:0;position:absolute;top:33%;width:100%}
			.inner-wrapper {padding:40px 0}
		}
		@media all and (max-width:720px) {.header {padding:0 40px}}
	</style>
	{{ghost_head}}
</head>
<body>
	<aside class="blog-cover">
		<figure>
			<figcaption>
				Powered by <a href="https://ghost.org">Ghost</a>
			</figcaption>
		</figure>
	</aside>
	<div class="outer-wrapper"><div class="inner-wrapper">
		<header class="index-header">
			<h1>{{meta_title}}</h1>
			<p>{{meta_description}}</p>
		</header>
		<main class="blog">
			<section class="blog-list">
				{{#foreach posts}}
				<article class="blog-post {{post_class}}">
					<header class="post-header">
						<a href="{{url}}"><h2>{{{title}}}</h2></a>
					</header>
					<section class="post-content">
					<p>{{excerpt}}&hellip;</p>
					</section>
					<footer class="post-footer">
						Written by <h4><i class="author-icon" style="background-image:url('{{author.image}}')"></i>{{author.name}}</h4> on a {{date format="dddd"}}, <time datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</time>{{#if tags}}, about {{tags}}{{/if}}
					</footer>
				</article>
				{{/foreach}}
			</section>
			<footer class="blog-footer">
				{{pagination}}
			</footer>
		</main>
	</div></div>
</body>
</html>